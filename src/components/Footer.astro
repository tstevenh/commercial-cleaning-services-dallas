---
import siteData from "../data/site.json";
import services from "../data/services.json";
import locations from "../data/locations.json";
import navData from "../data/navigation.json";
---

<footer class="bg-[#f5f3ee] text-black border-t-2 border-black">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 py-12">
      <!-- Company Info -->
      <div class="space-y-4">
        <a href="/" class="block hover:opacity-80 transition-opacity">
          <img src="/logo.png" alt="Commercial Cleaning Services Dallas" class="h-32 w-auto" />
        </a>
        <p class="text-sm leading-relaxed text-gray-600">
          Professional commercial cleaning services for Dallas area businesses.
          Licensed, bonded, and insured for your peace of mind.
        </p>
        <a
          href={`tel:${siteData.phone.replace(/\D/g, "")}`}
          class="inline-flex items-center gap-2 font-semibold no-underline hover:text-accent"
        >
          {siteData.phone}
        </a>
        <a
          href={`mailto:${siteData.email}`}
          class="text-sm text-gray-600 no-underline hover:text-accent"
        >
          {siteData.email}
        </a>
      </div>

      <!-- All Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">
          Services
        </h3>
        <ul class="space-y-2">
          {services.map((service: any) => (
            <li>
              <a
                href={`/services/${service.slug}`}
                class="text-sm hover:text-black no-underline"
              >
                {service.title.replace(' Dallas', '')}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- All Locations -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">
          Service Areas
        </h3>
        <ul class="space-y-2">
          {locations.map((location: any) => (
            <li>
              <a
                href={`/locations/${location.slug}`}
                class="text-sm hover:text-black no-underline"
              >
                {location.city}, TX
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links & Legal -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">
          Quick Links
        </h3>
        <ul class="space-y-2 mb-6">
          {navData.main.map(item => (
            <li>
              <a
                href={item.href}
                class="text-sm hover:text-black no-underline"
              >
                {item.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row items-center justify-between pt-8 pb-8 border-t border-black/20 gap-4">
      <p class="text-sm text-gray-600">
        &copy; {new Date().getFullYear()} {siteData.name}. All rights reserved.
      </p>

      <a href="/sitemap-index.xml" class="text-sm text-accent hover:text-accent-light no-underline font-medium">
        Sitemap
      </a>
    </div>
  </div>
</footer>
