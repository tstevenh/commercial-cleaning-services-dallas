---
/**
 * FAQ Component
 * Displays frequently asked questions with schema markup
 */
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
  title?: string;
}

const { faqs, title = "Frequently Asked Questions" } = Astro.props;

// Generate FAQPage schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map((faq) => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<!-- FAQ Section -->
<section class="faq-section" aria-labelledby="faq-title">
  <div class="container">
    <h2 id="faq-title" class="faq-title">{title}</h2>

    <div class="faq-list">
      {faqs.map((faq) => (
        <details class="faq-item">
          <summary class="faq-question">{faq.question}</summary>
          <div class="faq-answer">
            <p>{faq.answer}</p>
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

<!-- FAQ Schema -->
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} is:inline />

<style>
  .faq-section {
    padding: 4rem 0;
  }

  .faq-title {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    background-color: white;
    overflow: hidden;
    transition: box-shadow 0.2s;
  }

  .faq-item:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .faq-item[open] {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .faq-question {
    padding: 1rem 1.5rem;
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-text);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::after {
    content: "+";
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-primary);
    transition: transform 0.2s;
  }

  .faq-item[open] .faq-question::after {
    content: "âˆ’";
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem 1.5rem;
    border-top: 1px solid var(--color-bg-light);
    background-color: var(--color-bg-light);
  }

  .faq-answer p {
    margin: 1rem 0 0 0;
    line-height: 1.7;
    color: var(--color-text-light);
  }
</style>
