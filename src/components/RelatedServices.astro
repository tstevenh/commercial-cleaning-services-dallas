---
/**
 * Related Services Component
 * Displays related service links with descriptions
 */
interface Service {
  slug: string;
  title: string;
  description: string;
}

interface Props {
  services: Service[];
  title?: string;
}

const { services, title = "Related Commercial Cleaning Services" } = Astro.props;
---

<!-- Related Services Section -->
<section class="related-services-section bg-cream border-t-2 border-black" aria-labelledby="related-services-title">
  <div class="container py-16">
    <h2 id="related-services-title" class="text-center mb-12">{title}</h2>

    <div class="related-services-list">
      {services.map((service) => (
        <a href={`/services/${service.slug}`} class="related-service-card">
          <h3 class="related-service-title">{service.title}</h3>
          <p class="related-service-description">{service.description}</p>
          <span class="related-service-link inline-flex items-center gap-2 mt-4">
            Learn More
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .related-services-section {
    font-family: 'Space Grotesk', sans-serif;
  }

  .related-services-section h2 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    letter-spacing: -0.03em;
    color: #0a0a0a;
  }

  .related-services-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .related-service-card {
    background-color: #f5f3ee;
    padding: 2rem;
    border: 2px solid #0a0a0a;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    display: flex;
    flex-direction: column;
  }

  .related-service-card:hover {
    background-color: #0a0a0a;
    border-color: #0a0a0a;
    transform: translateY(-4px);
    box-shadow: 4px 4px 0 rgba(10, 10, 10, 0.2);
  }

  .related-service-card:hover .related-service-title,
  .related-service-card:hover .related-service-description,
  .related-service-card:hover .related-service-link {
    color: #f5f3ee;
  }

  .related-service-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #0a0a0a;
    margin: 0 0 1rem 0;
    transition: color 0.3s ease;
  }

  .related-service-description {
    line-height: 1.6;
    color: #1f1f1f;
    margin: 0;
    flex-grow: 1;
    transition: color 0.3s ease;
  }

  .related-service-link {
    color: #c8552d;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .related-service-card:hover .related-service-link {
    color: #f5f3ee;
  }

  @media (min-width: 1024px) {
    .related-services-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 640px) and (max-width: 1023px) {
    .related-services-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
