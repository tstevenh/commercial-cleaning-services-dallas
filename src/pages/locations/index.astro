---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import Schema from '../../components/Schema.astro';
import locations from '../../data/locations.json';
import siteData from '../../data/site.json';

const title = 'Commercial Cleaning Service Areas: Dallas & TX Suburbs | Commercial Cleaning Services of Dallas';
const description = 'Commercial cleaning services available across Dallas, TX and surrounding suburbs. Licensed, bonded, and insured cleaners serving your area.';
const site = siteData as any;

// Group locations by county
const dallasCounty = locations.filter(loc => loc.county === 'Dallas County');
const collinCounty = locations.filter(loc => loc.county === 'Collin County');
const dentonCounty = locations.filter(loc => loc.county === 'Denton County');

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Locations', url: '#' }
];
---

<BaseLayout title={title} description={description}>
  <!-- Schema Markup -->
  <Schema type="service" data={{
    "@context": "https://schema.org",
    "@type": "ItemList",
    name: "Commercial Cleaning Service Areas",
    description: description,
    url: "https://commercialcleaningservicesdallas.com/locations",
    itemListElement: locations.map((location, index) => ({
      "@type": "ListItem",
      position: index + 1,
      name: location.city,
      url: `https://commercialcleaningservicesdallas.com/locations/${location.slug}`
    }))
  }} />
  <Schema type="breadcrumb" data={{ breadcrumbs }} />

  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Instrument+Serif:ital@0;1&display=swap');

    :root {
      --font-display: 'Space Grotesk', sans-serif;
      --font-serif: 'Instrument Serif', serif;
      --color-black: #0a0a0a;
      --color-white: #ffffff;
      --color-cream: #f5f3ee;
      --color-accent: #c8552d;
      --color-accent-light: #e8784d;
      --color-sage: #7d8471;
      --color-charcoal: #1f1f1f;
      --color-text: #1f2937;
      --color-text-light: #6b7280;
      --color-stone: #e7e5e4;
    }

    body {
      font-family: var(--font-display);
      background-color: var(--color-cream);
      color: var(--color-black);
    }

    h1, h2, h3, h4 {
      font-family: var(--font-display);
      font-weight: 600;
      letter-spacing: -0.03em;
    }

    h1 {
      font-size: clamp(2rem, 6vw, 3.5rem);
      line-height: 1.05;
      font-weight: 700;
    }

    h2 {
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      line-height: 1.1;
    }

    h3 {
      font-size: clamp(1.25rem, 2.5vw, 1.5rem);
      line-height: 1.2;
    }

    .serif-italic {
      font-family: var(--font-serif);
      font-style: italic;
      font-weight: 400;
    }

    /* Button styles matching homepage */
    .btn-primary-custom {
      background: var(--color-black);
      color: var(--color-cream);
      padding: 1rem 2rem;
      font-size: 1rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      border: none;
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .btn-primary-custom:hover {
      background: var(--color-accent);
      transform: translateY(-2px);
    }

    .btn-secondary-custom {
      background: transparent;
      color: var(--color-black);
      padding: 1rem 2rem;
      font-size: 1rem;
      font-weight: 500;
      border: 2px solid var(--color-black);
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .btn-secondary-custom:hover {
      background: var(--color-black);
      color: var(--color-cream);
    }

  </style>

  <!-- Hero Section (no image) -->
  <section class="bg-cream relative py-12">
    <div class="container">
      <!-- Breadcrumbs -->
      <Breadcrumbs breadcrumbs={breadcrumbs} />

      <p class="text-sm uppercase tracking-widest mb-4 text-gray-600">
        Dallas, TX
      </p>
      <h1 class="mb-6">
        <span class="block">Commercial Cleaning</span>
        <span class="block serif-italic text-accent">Service Areas</span>
      </h1>
      <p class="text-lg text-gray-600 mb-6 max-w-2xl">
        Professional commercial cleaning services available across Dallas, TX and surrounding suburbs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="/contact" class="btn-primary-custom inline-flex items-center justify-center gap-3">
          Get Your Free Quote
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href={`tel:${siteData.phone.replace(/\D/g, '')}`} class="btn-secondary-custom inline-flex items-center justify-center gap-3">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call {siteData.phone}
        </a>
      </div>
    </div>
  </section>

  <!-- Locations by County -->
  <article class="bg-white border-t-2 border-black">
    <div class="container py-12">
      <div class="max-w-6xl mx-auto">

        <!-- Intro -->
        <p class="text-lg text-gray-700 mb-12">
          We proudly serve businesses throughout the Dallas-Fort Worth metroplex. Browse our service areas below or contact us to confirm availability for your specific location.
        </p>

        <!-- Dallas County -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-black mb-6" style="border-bottom: 3px double var(--color-accent); padding-bottom: 0.5rem;">
            Dallas County
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {dallasCounty.map(location => (
              <a
                href={`/locations/${location.slug}`}
                class="block bg-cream border-2 border-black overflow-hidden hover:shadow-lg transition-shadow group"
              >
                <div class="p-6">
                  <h3 class="text-lg font-bold text-black mb-2 group-hover:text-accent transition-colors">
                    {location.city}
                  </h3>
                  <p class="text-sm text-gray-600 mb-3">
                    Professional commercial cleaning services in {location.city}, TX.
                  </p>
                  <span class="inline-flex items-center text-accent font-semibold text-sm">
                    View Service Area →
                  </span>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Collin County -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-black mb-6" style="border-bottom: 3px double var(--color-accent); padding-bottom: 0.5rem;">
            Collin County
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {collinCounty.map(location => (
              <a
                href={`/locations/${location.slug}`}
                class="block bg-cream border-2 border-black overflow-hidden hover:shadow-lg transition-shadow group"
              >
                <div class="p-6">
                  <h3 class="text-lg font-bold text-black mb-2 group-hover:text-accent transition-colors">
                    {location.city}
                  </h3>
                  <p class="text-sm text-gray-600 mb-3">
                    Professional commercial cleaning services in {location.city}, TX.
                  </p>
                  <span class="inline-flex items-center text-accent font-semibold text-sm">
                    View Service Area →
                  </span>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Denton County -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-black mb-6" style="border-bottom: 3px double var(--color-accent); padding-bottom: 0.5rem;">
            Denton County
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {dentonCounty.map(location => (
              <a
                href={`/locations/${location.slug}`}
                class="block bg-cream border-2 border-black overflow-hidden hover:shadow-lg transition-shadow group"
              >
                <div class="p-6">
                  <h3 class="text-lg font-bold text-black mb-2 group-hover:text-accent transition-colors">
                    {location.city}
                  </h3>
                  <p class="text-sm text-gray-600 mb-3">
                    Professional commercial cleaning services in {location.city}, TX.
                  </p>
                  <span class="inline-flex items-center text-accent font-semibold text-sm">
                    View Service Area →
                  </span>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- CTA Section - Middle -->
        <section class="bg-accent border-t-2 border-b-2 border-black py-16">
          <div class="container max-w-4xl text-center">
            <h2 class="text-cream mb-6 text-2xl md:text-3xl font-bold">
              Do not see your city listed?
            </h2>
            <p class="text-cream/90 text-lg mb-8 max-w-2xl mx-auto">
              Contact us to discuss commercial cleaning availability for your Dallas-Fort Worth area location. We are constantly expanding our service areas.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/contact" class="btn-primary-custom inline-flex items-center justify-center gap-3 !bg-cream !text-black hover:!bg-black hover:!text-cream">
                Request Your Free Quote
              </a>
              <a href={`tel:${siteData.phone.replace(/\D/g, '')}`} class="btn-secondary-custom inline-flex items-center justify-center gap-3 !border-cream !text-black hover:!bg-cream hover:!text-black">
                Call {siteData.phone}
              </a>
            </div>
          </div>
        </section>
      </div>
    </div>
  </article>

  <!-- Final CTA Section - Exact copy from homepage -->
  <section class="py-20 md:py-28 bg-cream">
    <div class="container text-center">
      <h2 class="text-3xl md:text-5xl font-bold leading-tight mb-6">
        Professional Commercial Cleaning Dallas Businesses Depend On
      </h2>
      <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
        Contact us today for a free quote. We're ready to help you maintain a clean, professional facility that reflects well on your business.
      </p>
      <a href="/contact" class="btn-primary-custom inline-flex items-center justify-center gap-3">
        Get Your Free Quote
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  article a:not([class*="bg-"]),
  footer a {
    text-decoration: none;
    color: inherit;
  }
</style>