---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Page Not Found | Commercial Cleaning Services of Dallas';
const description = 'The page you are looking for cannot be found. Browse our commercial cleaning services or contact us for assistance.';
---

<BaseLayout title={title} description={description}>
  <section class="bg-cream relative min-h-[60vh] flex items-center py-20">
    <div class="container text-center">
      <h1 class="text-6xl md:text-8xl font-bold text-accent mb-6">404</h1>
      <h2 class="text-3xl md:text-4xl font-bold text-black mb-6">
        Page Not Found
      </h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        The page you are looking for cannot be found. Please check the URL or browse our commercial cleaning services below.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary-custom">
          Return to Homepage
        </a>
        <a href="/services" class="btn-secondary-custom">
          View Our Services
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Instrument+Serif:ital@0;1&display=swap');

  :root {
    --font-display: 'Space Grotesk', sans-serif;
    --font-serif: 'Instrument Serif', serif;
    --color-black: #0a0a0a;
    --color-cream: #f5f3ee;
    --color-accent: #c8552d;
  }

  body {
    font-family: var(--font-display);
    background-color: var(--color-cream);
    color: var(--color-black);
  }

  h1, h2 {
    font-family: var(--font-display);
    font-weight: 600;
    letter-spacing: -0.03em;
  }

</style>
