---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Thank You - Commercial Cleaning Services of Dallas';
const description = 'Thank you for your quote request. We will contact you within 24 hours.';

const siteData = (await import("../data/site.json")).default;
---

<BaseLayout title={title} description={description}>
  <!-- Noindex tag -->
  <meta name="robots" content="noindex, nofollow" />

  <div class="min-h-screen bg-cream flex items-center justify-center py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Success Message -->
      <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-black mb-4">
          Thank You!
        </h1>
        <p class="text-xl text-gray-700">
          Your quote request has been received.
        </p>
      </div>

      <!-- Response Time -->
      <div class="bg-white border-2 border-black p-8 mb-8">
        <h2 class="text-2xl font-bold text-black mb-4">What Happens Next</h2>
        <p class="text-lg text-gray-700 mb-6">
          We'll contact you within <strong>24 hours</strong> to discuss your commercial cleaning needs.
        </p>
        <div class="space-y-4 text-left max-w-md mx-auto">
          <div class="flex items-start">
            <span class="text-accent font-bold text-xl mr-3">1</span>
            <p class="text-gray-700">We review your request and facility details</p>
          </div>
          <div class="flex items-start">
            <span class="text-accent font-bold text-xl mr-3">2</span>
            <p class="text-gray-700">We contact you to discuss requirements and answer questions</p>
          </div>
          <div class="flex items-start">
            <span class="text-accent font-bold text-xl mr-3">3</span>
            <p class="text-gray-700">We provide a detailed quote tailored to your needs</p>
          </div>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="bg-cream border-2 border-black p-6 mb-8">
        <p class="text-gray-700 mb-4">
          Need to reach us sooner? Contact us directly:
        </p>
        <div class="space-y-2">
          <a href={`tel:${siteData.phone.replace(/\D/g, "")}`} class="block text-xl font-bold text-black hover:text-accent">
            {siteData.phone}
          </a>
          <a href={`mailto:${siteData.email}`} class="block text-lg text-black hover:text-accent break-all">
            {siteData.email}
          </a>
        </div>
      </div>

      <!-- Back to Home -->
      <div>
        <a
          href="/"
          class="btn-primary-custom inline-flex items-center justify-center px-8 py-4 text-lg font-semibold"
        >
          Return to Homepage
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

