---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import Schema from '../components/Schema.astro';
import ContactForm from '../components/ContactForm';

const siteData = (await import('../data/site.json')).default;

const title = 'Get Your Free Commercial Cleaning Quote | Dallas, TX';
const description = `Request a free commercial cleaning quote for your Dallas area business. Licensed, bonded, and insured. Call ${siteData.phone} or contact us online.`;

const localBusinessSchemaData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: siteData.name,
  description: description,
  url: "https://commercialcleaningservicesdallas.com/contact",
  telephone: siteData.phone,
  email: siteData.email,
  address: {
    "@type": "PostalAddress",
    streetAddress: siteData.address.street,
    addressLocality: siteData.address.city,
    addressRegion: siteData.address.state,
    postalCode: siteData.address.zip,
    addressCountry: "US"
  },
  areaServed: siteData.serviceAreas,
  priceRange: "$$-$$$"
};

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Contact', url: '#' }
];
---

<BaseLayout title={title} description={description}>
  <!-- Schema Markup -->
  <Schema type="localBusiness" data={localBusinessSchemaData} />
  <Schema type="breadcrumb" data={{ breadcrumbs }} />


  <!-- Hero Section (no image) -->
  <section class="bg-cream relative py-12">
    <div class="container">
      <!-- Breadcrumbs -->
      <Breadcrumbs breadcrumbs={breadcrumbs} />

      <p class="text-sm uppercase tracking-widest mb-4 text-gray-600">
        Dallas, TX
      </p>
      <h1 class="mb-6">
        <span class="block">Get Your Free</span>
        <span class="block serif-italic text-accent">Commercial Cleaning Quote</span>
      </h1>
      <p class="text-lg text-gray-600 mb-6 max-w-2xl">
        Professional commercial cleaning services for Dallas area businesses. Contact us for a free, no-obligation quote.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href={`tel:${siteData.phone.replace(/\D/g, '')}`} class="btn-primary-custom">
          Call {siteData.phone}
        </a>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="bg-white border-t-2 border-black">
    <div class="container py-12">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-cream border-2 border-black p-6">
            <h2 class="text-2xl font-bold text-black mb-4">Request Your Free Quote</h2>
            <ContactForm client:load />
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sidebar-scroll-container sticky top-24 space-y-4">
            <!-- Direct Contact -->
            <div class="bg-cream border-2 border-black p-4">
              <h3 class="text-lg font-bold text-black mb-3">Contact Us Directly</h3>
              <div class="space-y-3">
                <div>
                  <p class="text-xs font-medium text-gray-600 mb-1">Phone</p>
                  <a href={`tel:${siteData.phone.replace(/\D/g, '')}`} class="text-base font-bold text-black hover:text-accent">
                    {siteData.phone}
                  </a>
                </div>
                <div>
                  <p class="text-xs font-medium text-gray-600 mb-1">Email</p>
                  <a href={`mailto:${siteData.email}`} class="text-sm font-bold text-black hover:text-accent break-all">
                    {siteData.email}
                  </a>
                </div>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="bg-cream border-2 border-black p-4">
              <h3 class="text-lg font-bold text-black mb-3">Business Hours</h3>
              <div class="space-y-1 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-700">Monday - Friday</span>
                  <span class="font-medium">8:00 AM - 6:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">Saturday</span>
                  <span class="font-medium">9:00 AM - 2:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">Sunday</span>
                  <span class="font-medium">Closed</span>
                </div>
              </div>
              <p class="text-xs text-gray-600 mt-3">
                * Cleaning services available after hours and on weekends by appointment.
              </p>
            </div>

            <!-- Service Area -->
            <div class="bg-cream border-2 border-black p-4">
              <h3 class="text-lg font-bold text-black mb-3">Service Area</h3>
              <p class="text-sm text-gray-700 mb-3">
                We serve businesses throughout Dallas and surrounding suburbs:
              </p>
              <div class="grid grid-cols-2 gap-1 text-xs">
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Dallas</span>
                </div>
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Plano</span>
                </div>
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Irving</span>
                </div>
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Garland</span>
                </div>
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Richardson</span>
                </div>
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Frisco</span>
                </div>
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Carrollton</span>
                </div>
                <div class="flex items-center">
                  <span class="text-accent mr-1">•</span>
                  <span>Mesquite</span>
                </div>
              </div>
              <a href="/locations" class="inline-block mt-3 text-accent font-semibold hover:underline text-sm">
                View all service areas →
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- What to Expect Section -->
  <section class="bg-cream py-12 border-t border-black">
    <div class="container">
      <h2 class="text-2xl md:text-3xl font-bold text-black mb-6 text-center" style="border-bottom: 3px double var(--color-accent); padding-bottom: 0.5rem;">
        What to Expect
      </h2>
      <div class="grid md:grid-cols-3 gap-4">
        <div class="bg-white border-2 border-black p-4">
          <div class="text-3xl font-bold text-accent mb-2">1</div>
          <h3 class="text-lg font-bold text-black mb-2">Submit Your Request</h3>
          <p class="text-sm text-gray-700">
            Complete the form with your facility details and cleaning needs. The more information you provide, the more accurate your quote will be.
          </p>
        </div>
        <div class="bg-white border-2 border-black p-4">
          <div class="text-3xl font-bold text-accent mb-2">2</div>
          <h3 class="text-lg font-bold text-black mb-2">We'll Respond Within 24 Hours</h3>
          <p class="text-sm text-gray-700">
            We'll contact you to discuss your needs, answer questions, and may schedule a site visit if needed to provide an accurate quote.
          </p>
        </div>
        <div class="bg-white border-2 border-black p-4">
          <div class="text-3xl font-bold text-accent mb-2">3</div>
          <h3 class="text-lg font-bold text-black mb-2">Receive Your Free Quote</h3>
          <p class="text-sm text-gray-700">
            We'll provide a detailed quote with service options, pricing, and scheduling. No obligation—just clear information to help you decide.
          </p>
        </div>
      </div>
    </div>
  </section>

  <style is:global>
    .sidebar-scroll-container {
      max-height: calc(100vh - 12rem);
      overflow-y: auto;
      position: sticky;
      top: 6rem;
    }

    @media (max-width: 1024px) {
      .sidebar-scroll-container {
        position: static;
        max-height: none;
        overflow-y: visible;
      }
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    a:hover {
      color: var(--color-accent);
    }
  </style>
</BaseLayout>
