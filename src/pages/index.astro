---
import BaseLayout from "../layouts/BaseLayout.astro";
import Schema from "../components/Schema.astro";
import ContactForm from "../components/ContactForm";

const title = "Commercial Cleaning Dallas: Reliable Facility Cleaning | Commercial Cleaning Services of Dallas";
const description = "Professional commercial cleaning services in Dallas, TX. Licensed, bonded, and insured. Get a free quote today.";

const services = (await import("../data/services.json")).default;
const locations = (await import("../data/locations.json")).default;
const siteData = (await import("../data/site.json")).default;

const featuredServices = services.slice(0, 12);
const serviceAreas = locations;

const faqs = [
  {
    q: "What types of commercial cleaning services do you offer in Dallas?",
    a: "We provide comprehensive commercial cleaning services including daily janitorial services, office building cleaning, healthcare environmental services, construction cleanup, disinfection cleaning, and specialized facility cleaning for industries across Dallas and surrounding areas."
  },
  {
    q: "Are your cleaning services licensed and insured?",
    a: "Yes. We are fully licensed, bonded, and insured for commercial cleaning services in Dallas, Texas. This protects your property and provides peace of mind knowing you're working with a professional, accountable cleaning company."
  },
  {
    q: "What areas of Dallas do you serve?",
    a: "We serve Dallas and all surrounding suburbs including Highland Park, University Park, Farmers Branch, Irving, Garland, Richardson, Mesquite, Carrollton, Addison, Plano, The Colony, and Frisco. Contact us to confirm service availability in your specific location."
  },
  {
    q: "Do you offer customizable cleaning schedules?",
    a: "Absolutely. We understand that every business has unique needs. We offer flexible scheduling including daily, weekly, monthly, or one-time cleaning services. We can clean during business hours, after hours, or on weekends based on your preference."
  },
  {
    q: "How do I get a quote for commercial cleaning services?",
    a: "Getting a quote is simple. Contact us through our website form or call our Dallas office directly. We'll discuss your specific cleaning needs, facility size, and service frequency to provide a customized quote tailored to your requirements."
  },
  {
    q: "What makes your commercial cleaning different?",
    a: "We combine professional expertise with reliable service. Our team is trained in industry-best cleaning protocols, we use quality commercial-grade products, and we stand behind our work with a commitment to customer satisfaction. We don't just clean—we care about your business's image."
  }
];
---

<BaseLayout title={title} description={description}>
  <!-- Schema Markup -->
  <Schema type="organization" />

  <style>
    /* Marquee animation */
    @keyframes marquee {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    .marquee-track {
      animation: marquee 30s linear infinite;
    }

    /* Scroll animations */
    .reveal {
      opacity: 0;
      transform: translateY(40px);
      transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .reveal.visible {
      opacity: 1;
      transform: translateY(0);
    }


    /* FAQ styling */
    .faq-item {
      border-bottom: 2px solid var(--color-black);
    }

    .faq-answer {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .faq-item.active .faq-answer {
      max-height: 600px;
    }

    .faq-icon {
      transition: transform 0.3s ease;
    }

    .faq-item.active .faq-icon {
      transform: rotate(180deg);
    }

    /* CTA Phone Button */
    .cta-phone-button {
      background: transparent;
      color: var(--color-cream);
      padding: 1rem 2rem;
      font-size: 1rem;
      font-weight: 500;
      border: 2px solid var(--color-cream);
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .cta-phone-button:hover {
      background: var(--color-cream);
      color: white;
      text-decoration: none;
    }

    /* Service card styling */
    .service-card {
      background: var(--color-cream);
      border: 2px solid var(--color-black);
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .service-card:hover {
      background: var(--color-black);
      color: var(--color-cream);
    }

    .service-card:hover h3 {
      color: var(--color-cream);
    }

    .service-card:hover p {
      color: rgba(245, 243, 238, 0.8);
    }

    .service-card:hover .arrow-icon {
      transform: translateX(6px);
    }

    .arrow-icon {
      transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Location badge */
    .location-badge {
      display: inline-flex;
      align-items: center;
      padding: 0.75rem 1.5rem;
      background: white;
      border: 2px solid var(--color-black);
      border-radius: 100px;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .location-badge:hover {
      background: var(--color-black);
      color: var(--color-cream);
    }
  </style>

  <!-- Hero Section -->
  <section class="bg-cream relative min-h-screen flex flex-col">
    <!-- Marquee -->
    <div class="bg-accent text-cream border-b-2 border-black py-3 overflow-hidden -mt-16 md:-mt-[80px]">
      <div class="marquee-track flex gap-8 whitespace-nowrap">
        <span class="text-sm font-bold tracking-wide">DALLAS — HIGHLAND PARK — UNIVERSITY PARK — FARMERS BRANCH — IRVING — GARLAND — RICHARDSON — MESQUITE — CARROLLTON — ADDISON — PLANO — THE COLONY — FRISCO — DALLAS — HIGHLAND PARK — UNIVERSITY PARK — FARMERS BRANCH — IRVING — GARLAND — RICHARDSON — MESQUITE — CARROLLTON — ADDISON — PLANO — THE COLONY — FRISCO</span>
      </div>
    </div>

    <div class="container flex-1 flex items-center py-8 lg:py-12">
      <div class="grid lg:grid-cols-2 gap-12 items-center w-full">
        <!-- Left side - Content -->
        <div class="reveal">
          <p class="text-sm md:text-base uppercase tracking-widest mb-6 text-gray-600">
            Commercial Cleaning Dallas
          </p>
          <h1 class="mb-6">
            <span class="block">Commercial Cleaning</span>
            <span class="block serif-italic text-accent">Services in Dallas, Texas</span>
          </h1>
          <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-xl">
            Professional commercial cleaning services for Dallas area businesses. Licensed, bonded, and insured for your peace of mind.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 mb-10">
            <a href="/contact" class="btn-primary-custom inline-flex items-center justify-center gap-3">
              Get Your Free Quote
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a
              href={`tel:${siteData.phone.replace(/\D/g, "")}`}
              class="btn-secondary-custom inline-flex items-center justify-center gap-3"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {siteData.phone}
            </a>
          </div>

          <!-- Trust Signals -->
          <div class="flex flex-wrap gap-6 md:gap-8 pt-6 border-t-2 border-black">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span class="font-medium text-sm">Licensed Texas</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium text-sm">Bonded</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="font-medium text-sm">Insured</span>
            </div>
          </div>
        </div>

        <!-- Right side - Image with decorative elements -->
        <div class="relative reveal">
          <!-- Main image -->
          <div class="relative">
            <img
              src="/images/Services/office-building-cleaning.webp"
              alt="Commercial office cleaning in Dallas"
              class="w-full h-[400px] lg:h-[500px] object-cover rounded-none border-2 border-black"
              loading="lazy"
            />
            <!-- Decorative offset border -->
            <div class="absolute -bottom-4 -right-4 w-full h-full border-2 border-accent -z-10"></div>
          </div>

        </div>
      </div>
    </div>

    <!-- Decorative curve -->
    <svg class="absolute bottom-0 left-0 w-full h-auto" viewBox="0 0 1440 60" fill="none">
      <path d="M0 60L60 50C120 40 240 20 360 10C480 0 600 0 720 5C840 10 960 20 1080 25C1200 30 1320 30 1380 30L1440 30V60H1380C1320 60 1200 60 1080 60C960 60 840 60 720 60C600 60 480 60 360 60C240 60 120 60 60 60H0Z" fill="white"/>
    </svg>
  </section>

  <!-- Services Overview -->
  <section class="py-20 md:py-28 bg-cream">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-16 reveal">
        <p class="text-sm uppercase tracking-widest text-gray-500 mb-4">Our Services</p>
        <h2 class="mb-6">
          <span class="giant-underline">Comprehensive Commercial Cleaning</span>
          <span class="serif-italic text-accent">Dallas Businesses Trust</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          From daily janitorial services to specialized facility cleaning, we provide the professional commercial cleaning services Dallas businesses depend on.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {featuredServices.map((service, index) => (
          <a
            href={`/services/${service.slug}`}
            class="service-card p-6 flex flex-col justify-between min-h-[220px] no-underline"
          >
            <div>
              <span class="text-xs uppercase tracking-wider text-gray-500">{service.category}</span>
              <h3 class="text-xl font-bold mt-2 mb-3">{service.title.replace(' Dallas', '')}</h3>
              <p class="text-sm text-gray-600">{service.description}</p>
            </div>
            <div class="flex items-center justify-between mt-4">
              <span class="text-sm">Learn more</span>
              <svg class="arrow-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      <div class="text-center mt-12 reveal">
        <a href="/services" class="inline-flex items-center gap-2 text-lg font-medium hover:text-accent transition-colors no-underline">
          View All 18 Services
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 md:py-28 bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <div class="reveal">
          <p class="text-sm uppercase tracking-widest text-accent mb-6">Why Choose Us</p>
          <h2 class="mb-6">
            Dallas Businesses Choose Reliable Commercial Cleaning
          </h2>
          <p class="text-lg text-gray-600 serif-italic mb-8">
            When it comes to commercial cleaning in Dallas, you need a partner who shows up, does the job right, and cares about your business's reputation.
          </p>
        </div>

        <div class="space-y-0">
          {[
            { title: "Licensed & Insured", desc: "Fully licensed, bonded, and insured for your protection and peace of mind." },
            { title: "Trained Professionals", desc: "Our cleaning team receives thorough training in commercial cleaning best practices." },
            { title: "Flexible Scheduling", desc: "Services available daily, weekly, monthly, or as one-time cleaning to fit your needs." },
            { title: "Quality Supplies", desc: "We use commercial-grade cleaning products and equipment for superior results." },
            { title: "Reliable Service", desc: "Consistent, dependable cleaning that you can count on every time we visit." },
            { title: "Satisfaction Focused", desc: "We're committed to meeting your expectations and addressing any concerns promptly." }
          ].map((item, index) => (
            <div class="border-t-2 border-black py-6 reveal" style={`transition-delay: ${index * 100}ms`}>
              <h3 class="text-xl font-bold mb-2">{item.title}</h3>
              <p class="text-gray-600">{item.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-20 md:py-28 bg-cream">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-16 reveal">
        <p class="text-sm uppercase tracking-widest text-gray-500 mb-4">Service Areas</p>
        <h2 class="mb-6">
          Proudly Serving <span class="giant-underline">Dallas & Surrounding Areas</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Our commercial cleaning services extend across Dallas County, Collin County, and Denton County.
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-3 max-w-5xl mx-auto">
        {serviceAreas.map((location, index) => (
          <a
            href={`/locations/${location.slug}`}
            class="location-badge no-underline"
          >
            {location.city}, TX
          </a>
        ))}
      </div>

      <div class="text-center mt-12 reveal">
        <a href="/locations" class="btn-secondary-custom inline-flex items-center justify-center gap-3">
          View Service Area Details
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 bg-accent text-cream relative overflow-hidden">
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center reveal">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-none mb-6">
          Ready for a Cleaner Facility?
        </h2>
        <p class="text-xl opacity-95 mb-10 max-w-2xl mx-auto">
          Get your free commercial cleaning quote today. We'll assess your needs and provide a customized cleaning plan for your Dallas business.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary-custom inline-flex items-center justify-center gap-3">
            Get Your Free Quote
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href={`tel:${siteData.phone.replace(/\D/g, "")}`}
            class="btn-secondary-custom cta-phone-override inline-flex items-center justify-center gap-3"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {siteData.phone}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 md:py-28 bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-16 reveal">
          <p class="text-sm uppercase tracking-widest text-gray-500 mb-4">FAQ</p>
          <h2 class="text-4xl md:text-5xl">Frequently Asked Questions</h2>
        </div>

        <div class="space-y-0">
          {faqs.map((faq, index) => (
            <div class="faq-item py-6 reveal" style={`transition-delay: ${index * 100}ms`}>
              <button class="faq-trigger w-full flex items-center justify-between text-left">
                <span class="text-lg md:text-xl font-medium pr-8">{faq.q}</span>
                <svg class="faq-icon w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="faq-answer">
                <p class="pt-4 text-gray-600 text-lg">{faq.a}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA - Contact Form -->
  <section class="py-20 md:py-28 bg-cream">
    <div class="container">
      <div class="reveal">
        <h2 class="text-3xl md:text-5xl font-bold leading-tight mb-6 text-center">
          Professional Commercial Cleaning Dallas Businesses Depend On
        </h2>
        <p class="text-xl text-gray-600 mb-10 text-center max-w-2xl mx-auto">
          Contact us today for a free quote. We're ready to help you maintain a clean, professional facility that reflects well on your business.
        </p>
        <div class="max-w-3xl mx-auto">
          <div class="bg-cream border-2 border-black p-6">
            <h2 class="text-2xl font-bold text-black mb-4">Request Your Free Quote</h2>
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // FAQ accordion
  document.querySelectorAll('.faq-trigger').forEach(trigger => {
    trigger.addEventListener('click', () => {
      const item = trigger.parentElement as HTMLElement;
      const isActive = item.classList.contains('active');

      document.querySelectorAll('.faq-item').forEach(other => {
        other.classList.remove('active');
      });

      if (!isActive) {
        item.classList.add('active');
      }
    });
  });

  // Scroll reveal
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

  document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
</script>
